{
  "language": "spanish",
  "websites_path": "../input/test_sites.csv",
  // Preprocessing
  "preprocessing_algorithms": [
    "preprocessing.cleaner.MailCleaner",
    "preprocessing.cleaner.URLCleaner",
    "preprocessing.cleaner.WordsNumbersCleaner",
    "preprocessing.cleaner.NonCharPunctuationCleaner",
    "preprocessing.cleaner.CommonWords",
    "preprocessing.cleaner.MultipleSpacesCleaner"
  ],
  "preprocessing_parameters": {
    "preprocessing.cleaner.CommonWords": {
      "words_path": "../resources/common_words.txt"
    }
  },

  // Feature Extraction
  "extractor_algorithms": [
    "feature.rake.RAKE",
    "feature.textrank.TextRank",
    "feature.termfreq.TermFrequencies",
    "feature.simplerake.SimpleRAKE"
  ],
  "extractor_parameters": {
    "feature.rake.RAKE": {
      "language": "spanish",
      "keyword_separator": "., ",
      "stopwords": "../resources/ES/stopwords/stopwords.txt",
      "min_char_length": 3,
      "max_words_length": 2,
      "min_keyword_frequency": 2,
      "min_words_length_adj": 1,
      "max_words_length_adj": 1,
      "min_phrase_freq_adj": 2
    },
    "feature.textrank.TextRank": {
      "language": "spanish",
      "limit": null,
      "filter_pos_tags": [
        "nc00000",
        "nc0n000",
        "nc0p000",
        "nc0s000",
        "np00000"
      ]
    },
    "feature.termfreq.TermFrequencies": {
      "language": "spanish",
      "stopwords": "../resources/ES/stopwords/stopwords.txt",
      "min_count": 2
    },
    "feature.simplerake.SimpleRAKE": {
      "language": "spanish",
      "stopwords": "../resources/ES/stopwords/stopwords.txt"
    }
  },
  // Classifiers
  "classifiers": [],
  "classifiers_parameters": {
  },
  // Taxonomy
  "original_taxonomy": "../resources/ES/taxonomy/original_taxonomy.csv",
  "taxonomy_path": "../resources/ES/taxonomy/taxonomy.csv",
  "taxonomy_translate_from": "en",
  "taxonomy_translate_to": "es",
  "taxonomy_header": [
    "id",
    "lvl1",
    "lvl2"
  ],
  "taxonomy_mask": [
    1,
    0,
    0,
    1,
    1
  ],
  // Crawling
  "template_path": "../resources/templates/bing.txt",
  "query_out_path": "../output/query/bing.txt",
  "keywords_path": "../resources/query/keywords.txt",
  "sites_path": "../resources/query/sites.txt",
  //Logger
  "log_path": "../log"
}
